<ContentControl
    x:Class="WpfTcpClient.View.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfTcpClient.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBox
            Grid.Row="0"
            Margin="10"
            Padding="5"
            Text="{Binding Name}" />
        <StackPanel
            Grid.Row="1"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Name="Ok"
                Margin="10"
                Click="Ok_Click"
                Content="OK" />
            <Button
                Name="Cancel"
                Margin="10"
                Click="Cancel_Click"
                Content="Cancel" />
        </StackPanel>
    </Grid>
</ContentControl>
